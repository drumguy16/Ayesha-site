<h3>Add Images To This Project</h3>
<%= form_for @pic, url: category_project_pics_path, html: { multipart: true } do |form| %>
  <% if @pic.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@pic.errors.count, "error") %> prohibited
        this image from being saved:
      </h2>
      <ul>
        <% @pic.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <%= form.file_field :pic_path %>
  <%= form.submit "Upload Image", class: "btn btn-primary" %>
<% end %>