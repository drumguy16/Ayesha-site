<section class="container text-sm-center">
  <%= form_for @category, url: categories_path, html: { multipart: true } do |form| %>
    <% if @category.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@category.errors.count, "error") %> prohibited
          this category from being saved:
        </h2>
        <ul>
          <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :name %>
    </p>
    <p>
      <%= form.label :category_description%><br>
      <%= form.text_area :description %>
    </p>
    <p>
      <%= form.file_field :image_path %>
    </p>
    <p>
      <%= form.submit "Create Category",class: "btn btn-primary" %>
    </p>
  <% end %>
</section>