<%= render partial: "layouts/nav", locals: {category: @category}  %>
<% if current_user %>
  <ul>
    <li class='nbtn'><%= link_to "Add Project", "/categories/#{@category.id}/projects/new" %>
  </li>
<% end %>
<section class="container">
  <% if @category.name == 'about' %>
    <%= render partial: "categories/about", locals: {category: @category} %>
  <% else %>
    <div class="col-sm-4 offset-sm-4">
      <h1><%= @category.name.upcase %></h1>
      <p class="lead"><%= @category.description %></p>
    </div>
    <% @category.projects.each do |project| %>
      <div class="col-sm-3">
        <%= link_to image_tag(project.main_image_path,  alt: project.title, class: "img-fluid"), "/categories/#{@category.id}/projects/#{project.id}" %>
      </div>
    <% end %>
  <% end %>
</section>